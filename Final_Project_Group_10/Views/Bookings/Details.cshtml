@model Final_Project_Group_10.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<div class="container mt-4">
    <h1 class="display-4 mb-4">Booking Details</h1>

    <div class="card shadow">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Room</dt>
                <dd class="col-sm-9">
                    <strong>@Model.Room?.Name</strong>
                    <br />
                    <small class="text-muted">@Model.Room?.Location</small>
                </dd>

                <dt class="col-sm-3">User Name</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">Start Time</dt>
                <dd class="col-sm-9">@Model.StartTime.ToString("F")</dd>

                <dt class="col-sm-3">End Time</dt>
                <dd class="col-sm-9">@Model.EndTime.ToString("F")</dd>

                <dt class="col-sm-3">Duration</dt>
                <dd class="col-sm-9">@((Model.EndTime - Model.StartTime).TotalHours.ToString("0.##")) hours</dd>

                @if (!string.IsNullOrEmpty(Model.Purpose))
                {
                    <dt class="col-sm-3">Purpose</dt>
                    <dd class="col-sm-9">@Model.Purpose</dd>
                }

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.IsConfirmed)
                    {
                        <span class="badge bg-success fs-6">Confirmed</span>
                    }
                    else
                    {
                        <span class="badge bg-warning fs-6">Pending</span>
                    }
                    @if (Model.EndTime < DateTime.Now)
                    {
                        <span class="badge bg-secondary fs-6">Completed</span>
                    }
                </dd>

                <dt class="col-sm-3">Booked On</dt>
                <dd class="col-sm-9">@Model.BookedAt.ToString("F")</dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Cancel Booking</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
