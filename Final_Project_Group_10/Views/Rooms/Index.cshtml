@model IEnumerable<Final_Project_Group_10.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<div class="container mt-4 animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-gradient fw-bold">
            <i class="bi bi-building"></i> Available Rooms
        </h1>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Add New Room
        </a>
    </div>

    <div class="row g-4">
        @foreach (var room in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 room-card">
                    <div class="card-body">
                        <h4 class="card-title fw-bold mb-3">
                            <i class="bi bi-door-open" style="color: #E00122;"></i> @room.Name
                        </h4>
                        <p class="text-muted mb-2">
                            <i class="bi bi-geo-alt"></i> @room.Location
                        </p>
                        @if (!string.IsNullOrEmpty(room.Description))
                        {
                            <p class="card-text text-secondary mb-3">@room.Description</p>
                        }
                        <div class="d-flex flex-wrap gap-2 mb-3">
                            <span class="room-capacity">
                                <i class="bi bi-people-fill"></i> 
                                <span>@room.Capacity People</span>
                            </span>
                            @if (room.IsAvailable)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Available
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-x-circle"></i> Unavailable
                                </span>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 pt-0">
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@room.Id" class="btn btn-primary flex-fill">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-warning flex-fill">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@room.Id" class="btn btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="container-modern text-center">
            <div class="py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h3 class="mt-4">No Rooms Available Yet</h3>
                <p class="text-muted mb-4">Get started by adding your first room to the system!</p>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle"></i> Add Your First Room
                </a>
            </div>
        </div>
    }
</div>
