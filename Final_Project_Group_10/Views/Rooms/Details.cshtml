@model Final_Project_Group_10.Models.Room

@{
    ViewData["Title"] = "Room Details";
}

<div class="container mt-4">
    <h1 class="display-4 mb-4">@Model.Name</h1>

    <div class="card shadow">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Location</dt>
                <dd class="col-sm-9">@Model.Location</dd>

                <dt class="col-sm-3">Capacity</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-info">@Model.Capacity people</span>
                </dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.IsAvailable)
                    {
                        <span class="badge bg-success">Available</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Unavailable</span>
                    }
                </dd>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Model.Description</dd>
                }
            </dl>

            @if (Model.Bookings != null && Model.Bookings.Any())
            {
                <hr />
                <h4>Upcoming Bookings</h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Purpose</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model.Bookings.OrderBy(b => b.StartTime))
                            {
                                <tr>
                                    <td>@booking.UserName</td>
                                    <td>@booking.StartTime.ToString("g")</td>
                                    <td>@booking.EndTime.ToString("g")</td>
                                    <td>@booking.Purpose</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
